---
export interface Props {
  id: string
  isOpen?: boolean
}

const { id, isOpen = false } = Astro.props
---

<div class="accordion__section" id={`accordion-${id}__section`} aria-hidden={`${!isOpen}`}>
  <div class="accordion__wrapper">
    <div class="accordion__wrapper-transform">
      <div class="accordion__content content">
        <slot />
      </div>
    </div>
  </div>
</div>
