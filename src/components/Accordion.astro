---
interface Props {
    id: string;
    title: string;
}

const { id, title } = Astro.props;
---

<div class="accordion">
    <div class="accordion__header">
        <button
            id={id}
            type="button"
            aria-expanded="false"
            aria-controls={"section-" + id}
            class="accordion__trigger">
            <span class="accordion__title">{title}</span>
            <span class="accordion__icon">
                <slot name="header-icon" />
            </span>
        </button>
    </div>
    <div
        class="accordion__section"
        role="region"
        aria-labelledby={id}
        id={"section-" + id}
        aria-hidden="true">
        <div class="accordion__content">
            <slot />
        </div>
    </div>
</div>

<div class="accordion">
    <div class="accordion__header">
        <button 
            id={id} 
            type="button" 
            aria-expanded="false"
            aria-controls={"section-" + id} 
            class="accordion__trigger">
                {title}
            <span class="accordion__icon">
                <slot name="header-icon" />
            </span>
        </button>
    </div>
    <div 
        class="accordion__section"         
        aria-labelledby={id}
        id={"section-" + id} 
        aria-hidden="true">
        <div class="accordion__wrapper">
            <div class="accordion__wrapper-transform">
                <div class="accordion__content">
                    <slot />
                </div>
            </div>
        </div>
    </div>
</div>
